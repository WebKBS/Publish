@{
    ViewData["title"] = "비밀번호 변경";
}


<section class="cont edit_pw">
    <div class="inner">
        <h2 class="h2 suit_m">내 정보 변경</h2>
        <p class="sub_title body_1 suit_r color_theme">비밀번호 변경</p>
        <div class="form_wrap">
            <form>
                <div class="input_wrap pw">
                    <label for="pw" class="body_2 suit_m color_white_2">비밀번호 설정</label>
                    <div class="pos_box">
                        <input type="password" id="pw" placeholder="영문, 숫자, 특수문자 조합 8~16자리" />
                        <button type="button" class="view_btn" data-eye>
                            <img src="~/images/icons/eye_close.svg" class="close" alt="비밀번호 보지않기" />
                            <img src="~/images/icons/eye_open.svg" class="open" alt="비밀번호 보기" />
                        </button>
                    </div>
                    <div class="pos_box">
                        <input type="password" id="rePw" placeholder="비밀번호 재입력" />
                        <button type="button" class="view_btn" data-eye>
                            <img src="~/images/icons/eye_close.svg" class="close" alt="비밀번호 보지않기" />
                            <img src="~/images/icons/eye_open.svg" class="open" alt="비밀번호 보기" />
                        </button>
                    </div>
                </div>
                <button type="button" class="next_btn button_160">변경하기</button>
            </form>
        </div>
    </div>
</section>



@section Heads{
    <link rel="stylesheet" href="~/css/pages/EditPw.css" />
}