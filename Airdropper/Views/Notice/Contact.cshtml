@{
    ViewData["title"] = "문의하기";
}


<section class="cont1 contact">
    <div class="inner">
        <h2>문의하기</h2>
        <div class="table_wrap">
            <div class="input_wrap">
                <input class="input_title" type="text" placeholder="문의 제목을 20자 내외로 입력해주세요." maxlength="20" />
                <select>
                    <option value="none" disabled selected>문의 유형 선택</option>
                    <option>기능 관련</option>
                    <option>결제 관련</option>
                    <option>회원정보 관련</option>
                    <option>오류/장애 신고</option>
                    <option>기타</option>
                </select>
            </div>
            <div class="textarea_wrap">
                <!-- 대신 썸머노트 사용 -->
                @*<textarea placeholder="문의 내용을 500자 이내로 입력해주세요." maxlength="500" id="textarea"></textarea>
                <p class="num">
                공백 포함
                <span>0</span>
                자
                </p>*@
                <div id="summernote"></div>
            </div>
            @*         <div class="file_wrap">
            <input type="text" disabled placeholder="(선택) 파일 첨부" value="">
            <input type="file" id="upload" />
            <label for="upload" class="upload_btn">
            파일 찾기
            </label>
            </div>*@
            <input type="email" class="email" placeholder="답변 받으실 이메일을 입력하세요." />
        </div>
        <button type="button" class='send_btn'>제출하기</button>
    </div>
</section>








<script>
    // select 색상 바꾸기
    const select = document.querySelector('select');

    select.addEventListener('change', () => {

        if (select.selectedIndex !== 0) {
            select.style.color = "#222"
        }
    })


</script>



