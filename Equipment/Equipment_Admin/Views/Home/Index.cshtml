<script>
    let qrcode = new QRCode(document.getElementById('qrcode'), {
        width: 100,
        height: 100,
    });

    function makeCode() {
        qrcode.makeCode('https://sharewbs.com/');
    }

    makeCode();

    $('#text')
        .on('blur', function () {
            makeCode();
        })
        .on('keydown', function (e) {
            if (e.keyCode == 13) {
                makeCode();
            }
        });
</script>

