@{
    Layout = null;
}

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">1:1 문의 추가</h4>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="basic-form">
                        <form>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2 pt-0">상태</label>
                                <div class="col-sm-10 d-flex">
                                    <div class="form-check mr-3">
                                        <input class="form-check-input" type="radio" id="check1" name="check" value="" checked />
                                        <label class="form-check-label" for="check1"> 오류 </label>
                                    </div>
                                    <div class="form-check mr-3">
                                        <input class="form-check-input" type="radio" id="check2" name="check" value="" />
                                        <label class="form-check-label" for="check2"> 건의 </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" id="check3" name="check" value="" />
                                        <label class="form-check-label" for="check3"> 문의 </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">제목</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" placeholder="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">문의 내용</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="4" readonly></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">답변</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" rows="4"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger mr-auto">삭제</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">닫기</button>
                <button type="button" class="btn btn-primary">저장</button>
            </div>
        </div>
    </div>
</div>