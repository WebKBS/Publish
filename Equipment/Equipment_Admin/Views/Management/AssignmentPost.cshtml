@{
    Layout = null;
}

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">과제 추가 / 수정</h4>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="card-body">
                    <div class="basic-form">
                        <form>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-3 pt-0">상태</label>
                                <div class="col-sm-9 d-flex">
                                    <div class="form-check mr-3">
                                        <input class="form-check-input" type="radio" id="check1" name="check" value="" checked />
                                        <label class="form-check-label" for="check1"> 진행 </label>
                                    </div>
                                    <div class="form-check mr-3">
                                        <input class="form-check-input" type="radio" id="check2" name="check" value="" />
                                        <label class="form-check-label" for="check2"> 완료 </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" id="check3" name="check" value="" />
                                        <label class="form-check-label" for="check3"> 정지 </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">과제번호</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">과제명</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">기관명</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" placeholder="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">시작일시</label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" placeholder="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">종료일시</label>
                                <div class="col-sm-9">
                                    <input type="date" class="form-control" placeholder="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">사내 책임자</label>
                                <div class="col-sm-9">
                                    <select class="form-control w-100">
                                        <option selected="">R&D 팀 나개발 대리</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Memo</label>
                                <div class="col-sm-9">
                                    <textarea class="form-control" rows="4"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger mr-auto">삭제</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">닫기</button>
                <button type="button" class="btn btn-primary">저장</button>
            </div>
        </div>
    </div>
</div>