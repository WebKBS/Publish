@{
    ViewData["title"] = "닉네임 변경";
}


<section class="cont1">
    <div class="inner">
        <h2>내 정보 변경</h2>
        <p class="sub_title">닉네임 변경</p>
        <div class="form_wrap">
            <form>
                <div class="input_wrap nickname">
                    <label for="nickName">닉네임</label>
                    <div class="box">
                        <!-- 각 Input error 클래스 추가시 백그라운드, 포커스 색상 변경 -->
                        <input type="text" id="nickName" />
                        <button type="button" class="check_btn">중복확인</button>
                    </div>
                    <p class="success_msg">사용 가능한 닉네임입니다.</p>
                    <p class="error_msg">닉네임을 입력해주세요.</p>
                </div>
            </form>
        </div>
        <button type="button" class="next_btn">변경하기</button>
    </div>
</section>






@section Heads{
    <link rel="stylesheet" href="~/css/ChangeHeader.css" />
    <link rel="stylesheet" href="~/css/Edit.css" />
}