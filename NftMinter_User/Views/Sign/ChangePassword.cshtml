@{
    ViewData["title"] = "비밀번호 변경";
}


<section class="cont cont1">
    <div class="inner">
        <div class="login_wrap">
            @*<img class="logo" alt="로그인" />*@
            <h2>비밀번호 변경</h2>
            <form>
                <div class="box">
                    <div class="input_wrap">
                        <!-- error 클래스 색상변경 -->
                        <input type="password" class="password" name="" id="pw" placeholder="영문, 숫자, 특수문자 조합 8~16자리" />
                        <button type="button" class="check_pw" data-eye>
                            <!-- img on클래스 추가시 눈동자 -->
                            <img src="~/images/icons/eye_close.svg" alt="비밀번호 가리기" />
                            <img src="~/images/icons/eye_open.svg" alt="비밀번호 보기" />
                        </button>
                    </div>
                    <div class="pw_wrap">
                        <!-- error 클래스 색상변경 -->
                        <input type="password" class="password" name="" id="re_pw" placeholder="비밀번호 재입력" />
                        <button type="button" class="check_pw" data-eye>
                            <!-- img on클래스 추가시 눈동자 -->
                            <img src="~/images/icons/eye_close.svg" alt="비밀번호 가리기" />
                            <img src="~/images/icons/eye_open.svg" alt="비밀번호 보기" />
                        </button>
                    </div>
                    <p class="success_msg">이메일 인증이 완료되었습니다.</p>
                    <p class="error_msg">인증번호를 입력하세요.</p>
                </div>
                <button type="submit">다음으로</button>
            </form>
        </div>
        <div class="info_wrap">
            <div class="menu">
                <ul>
                    <li>
                        <a href="#">이용약관</a>
                    </li>
                    <li>
                        <a href="#">개인정보처리방침</a>
                    </li>
                    <li>
                        <a href="#">책임의 한계와 법적고지</a>
                    </li>
                    <li>
                        <a href="#">회원정보</a>
                    </li>
                    <li>
                        <a href="#">고객센터</a>
                    </li>
                </ul>
            </div>
            <div class="box">
                <p class="logo">
                    <img src="~/images/icons/pentabreed.png" alt="pentabreed" />
                </p>
                <p class="copy">
                    Copyright © PENTABREED All Rights Reserved.
                </p>
            </div>
        </div>
    </div>
</section>



@section Heads{
    <link rel="stylesheet" href="~/css/ChangeHeader.css" />
    <link rel="stylesheet" href="~/css/SignCommon.css" />
    <link rel="stylesheet" href="~/css/ChangePassword.css" />

    <script src="~/js/ChangePassword.js" defer></script>
}